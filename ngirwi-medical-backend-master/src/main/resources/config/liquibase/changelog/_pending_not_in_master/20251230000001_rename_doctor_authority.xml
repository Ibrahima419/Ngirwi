<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251230000001-1" author="system">
        <comment>Rename DOCTOR authority to ROLE_DOCTOR for Spring Security consistency</comment>
        
        <!-- First update the user_authority join table -->
        <update tableName="jhi_user_authority">
            <column name="authority_name" value="ROLE_DOCTOR"/>
            <where>authority_name = 'DOCTOR'</where>
        </update>
        
        <!-- Then update the authority table -->
        <update tableName="jhi_authority">
            <column name="name" value="ROLE_DOCTOR"/>
            <where>name = 'DOCTOR'</where>
        </update>
    </changeSet>

</databaseChangeLog>
